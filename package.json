{
    "name": "tachyon-expire-cache",
    "version": "0.9.0",
    "description": "tachyon drive enabled async cache with expire support",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "scripts": {
        "build": "tsup src/index.mts --minify --sourcemap --format cjs,esm --dts --clean",
        "prepublishOnly": "pnpm run build",
        "test": "vitest test --run --no-isolate --coverage",
        "coverage": "vitest test --run --no-isolate --reporter=dot --coverage --coverage.reporter=lcov",
        "lint": "eslint . --ext .mts",
        "validate": "tsc --noEmit --project tsconfig.test.json"
    },
    "files": [
        "dist"
    ],
    "repository": "github:mharj/tachyon-expire-cache",
    "keywords": [
        "storage",
        "cache",
        "driver",
        "nodejs"
    ],
    "mocha": {
        "exit": true,
        "extension": [
            "mts",
            "js"
        ],
        "recursive": true,
        "require": [
            "ts-node/register",
            "source-map-support/register"
        ],
        "reporters": [
            "spec",
            "mocha-junit-reporter"
        ]
    },
    "author": "mharj",
    "license": "MIT",
    "devDependencies": {
        "@avanio/logger-like": "^0.2.3",
        "@luolapeikko/ts-common": "^0.2.4",
        "@stylistic/eslint-plugin": "^2.8.0",
        "@stylistic/eslint-plugin-ts": "^2.8.0",
        "@tsconfig/node18": "^18.2.4",
        "@types/node": "^18.19.54",
        "@types/sinon": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^8.8.0",
        "@typescript-eslint/parser": "^8.8.0",
        "@vitest/coverage-v8": "^2.1.2",
        "@vitest/ui": "^2.1.2",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-sonarjs": "^0.23.0",
        "prettier": "^3.3.3",
        "sinon": "^19.0.2",
        "tachyon-drive-node-fs": "^0.10.0",
        "ts-node": "^10.9.2",
        "tsup": "^8.3.0",
        "typescript": "^5.6.2",
        "vite": "^5.4.8",
        "vitest": "^2.1.2",
        "zod": "^3.23.8"
    },
    "dependencies": {
        "@luolapeikko/cache-types": "^0.0.6",
        "tachyon-drive": "^0.10.0"
    },
    "peerDependencies": {
        "@avanio/logger-like": "^0.1 || ^0.2",
        "@luolapeikko/ts-common": "^0.1 || ^0.2"
    }
}
